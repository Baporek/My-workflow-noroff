{
  "name": "css-frameworks-ca",
  "version": "1.0.1",
  "description": "Test",
  "main": "index.js",
  "scripts": {
    "build": "sass src/scss:dist/css",
    "start": "sass --watch src/scss:dist/css & live-server",
    "format": "prettier --write src/js/index.js",
    "check-format": "prettier --check src/js/index.js",
    "lint": "eslint .",
    "test": "npm run test-unit",
    "test-unit": "jest",
    "prepare": "husky install",
    "test-e2e": "cypress open",
    "test-e2e-report": "cypress run --reporter mochawesome",
    "test-e2e-cli": "cypress run"
  },
  "keywords": [],
  "author": "Noroff",
  "license": "ISC",
  "devDependencies": {
    "cypress": "^13.6.2",
    "eslint": "^8.56.0",
    "eslint-plugin-cypress": "^2.15.1",
    "husky": "^8.0.3",
    "jest": "^29.2.0",
    "lint-staged": "^15.2.0",
    "live-server": "^1.2.2",
    "prettier": "^3.1.1",
    "sass": "^1.54.8"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.2",
    "bootstrap-dark-5": "^1.1.3",
    "decode-uri-component": "^0.2.1",
    "glob-parent": "^5.1.2"
  },
  "lint-staged": {
    "*.js": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.html": [
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write"
    ]
  }
}
